    "next-sitemap": "^4.1.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.0.5"
  },
  "devDependencies": {
    "cypress": "^12.12.0",
    "cz-conventional-changelog": "^3.3.0",
    "prettier": "^3.0.0",
    "textlint": "^12.2.1",
    "textlint-rule-no-dead-link": "^4.8.0",
    "textlint-rule-terminology": "^3.0.2"
